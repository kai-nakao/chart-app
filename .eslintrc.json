{
  "extends": ["next/core-web-vitals", "plugin:storybook/recommended"],
  "plugins": ["strict-dependencies", "unused-imports"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling"],
          "object",
          "type",
          "index"
        ],
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "strict-dependencies/strict-dependencies": [
      "error",
      [
        {
          "module": "src/features/*/components/**/*",
          "allowReferenceFrom": ["src/features/*/components/index.tsx"],
          // features/*/components/ any file can import other files from the same folder
          "allowSameModule": true
        },
        {
          "module": "src/features/*/components/*/index.tsx",
          "allowReferenceFrom": ["src/pages/**/*"],
          "allowSameModule": false
        },
        {
          "module": "src/features/*/functions/**/*",
          "allowReferenceFrom": ["src/features/*/components/**/*"],
          "allowSameModule": true
        }
      ]
    ]
  }
}
